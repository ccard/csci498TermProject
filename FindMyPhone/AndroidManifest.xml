<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="1" android:versionName="1.0"
    package="csci498.ccard.findmyphone" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="15"/>
    <supports-screens android:largeScreens="true"
        android:normalScreens="true" android:smallScreens="false"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application android:debuggable="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name" android:theme="@style/AppTheme">
        <uses-library android:name="com.google.android.maps" android:required="true"/>
        <activity android:label="@string/title_activity_find_my_phone"
            android:name=".FindMyPhone"
            android:screenOrientation="portrait" android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_display_map"
            android:name=".DisplayMap"
            android:parentActivityName=".MyDevices" android:theme="@style/MapTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_my_devices"
            android:name=".MyDevices" android:theme="@android:style/Theme.Holo">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="csci498.ccard.findmyphone.FindMyPhone"/>
        </activity>
        <activity android:label="@string/title_activity_creat_account" android:name=".CreateAccount">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="csci498.ccard.findmyphone.FindMyPhone"/>
        </activity>
        <service android:name=".CommandListener"/>
        <service android:name=".CommandPoller"/>
        <reciever android:name=".OnBootReciever">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>	
        </reciever>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>
